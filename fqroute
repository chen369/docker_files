ip addr add 172.17.128.2/24 dev eth0

ip tuntap | grep tun0 || (
   ip tuntap add dev tun0 mode tun
   ip link set tun0 up
   ip addr add 10.0.0.1/24 dev tun0
)

grep aboard /etc/iproute2/rt_tables || echo "200 aboard" >> /etc/iproute2/rt_tables

ip rule | grep aboard || ip rule add iif eth0 from 172.17.0.0/17 table aboard

ip route add default via 10.0.0.2 table aboard

badvpn-tun2socks --tundev tun0 --netif-ipaddr 10.0.0.2 --netif-netmask 255.255.255.0 --socks-server-addr 172.17.42.1:9055
